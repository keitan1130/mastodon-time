{
  "name": "Mastodon Post Viewer",
  "description": "Mastodon投稿検索",
  "version": "2.8",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "mastodon-icon.png"
  },
  "permissions": [
    "webRequest",
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
